<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       xmlns:p="http://www.springframework.org/schema/p">
    <bean id="hero" class="com.mycompany.app.StandartHero">
        <constructor-arg value="Jimmy"/>
        <constructor-arg value="5"/>
    </bean>
    <bean id ="goldArmor" class="com.mycompany.app.GoldArmor"/>
    <bean id="hero2" class="com.mycompany.app.ArmoredHero">
        <constructor-arg value="Tom"/>
        <constructor-arg value = "7"/>
        <constructor-arg ref="goldArmor"/>
    </bean>

    <bean id="hero3" class="com.mycompany.app.HeroWithWeapon">
        <property name="weapon">
            <bean class="com.mycompany.app.Sword"/>
        </property>
    </bean>
    <bean id="hero4" class="com.mycompany.app.ArmoredHero">
        <constructor-arg>
            <bean class="com.mycompany.app.GoldArmor"/>
        </constructor-arg>
    </bean>
    <bean id="hero5" class="com.mycompany.app.HeroWithWeapon"
          p:weapon-ref="sword"/>

    <bean id = "sword" class="com.mycompany.app.Sword"/>
    <bean id ="hammer" class="com.mycompany.app.Hammer"/>
    <bean id = "hero6" class="com.mycompany.app.HeroWithManyWaepons">
        <property name="weapons">
            <list>
                <ref bean="sword"/>
                <ref bean="hammer"/>
            </list>
        </property>
    </bean>
    <bean id = "hero7" class="com.mycompany.app.HeroWithManyWaeponsNew">
        <property name="weapons">
            <map>
                <entry key="Sword!" value-ref="sword"/>
                <entry key="Hammer!" value-ref="hammer"/>
            </map>
        </property>
    </bean>

</beans>